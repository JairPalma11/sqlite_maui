<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SQliteMAUI.Pages.SQLOperationPage"
             Padding="20"
             Title="SQL Operaciones">
    <VerticalStackLayout
        Spacing="10">
        
            <Entry
                x:Name="entry"
                Placeholder="Escribe tu consulta en SQL"/>

            <Label
                x:Name="result"
                Text="Sin resultados" />

            <Button
                Clicked="OnExecuted"
                Text="Ejecutar" />
    </VerticalStackLayout>
</ContentPage>
